<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project.valdoc.CommonTestViewActivity">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarFadeDuration="5"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/new_common_certificate" />

            <include
                android:id="@+id/test1_table_ll"
                layout="@layout/test_table_1" />

            <include
                android:id="@+id/test2_table_ll"
                layout="@layout/test_table_2" />

            <include
                android:id="@+id/test3_table_ll"
                layout="@layout/test_table_3" />

            <include
                android:id="@+id/test4_table_ll"
                layout="@layout/test_table_4"
                android:visibility="gone" />

            <include
                android:id="@+id/test5_table_ll"
                layout="@layout/test_table_5"
                android:visibility="gone" />

            <include
                android:id="@+id/test6A_table_ll"
                layout="@layout/test_table_6_a"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/tester_witness_footer" />

</LinearLayout>


